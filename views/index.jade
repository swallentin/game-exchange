include mixins/features/game

extends layout

block primary-content
  .row
    div(class='twelve columns')
      .panel
        img(src='http://dummyimage.com/600x300/808080/fff/&text=Features+titles')
  .row
    div(class='six columns')
      .panel
        h4 My games
    div(class='six columns')
      .panel
        h4 Borrowed games
  .row
    div(class='four columns')
      .panel
          a(href='/game/new') Add a game
    div(class='four columns')
      .panel
        p Edit a game
    div(class='four columns')
      .panel
        p Invite a friend

block secondary-content
  h4 Latest games
  p List recently added games!

  h4 List of available game
  p Is it time to find out a new game?
